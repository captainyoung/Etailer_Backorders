<?xml version="1.0"?>
<config>
    <global>
        <models>
            <etailer_backorders>
                <class>Etailer_Backorders_Model</class>
            </etailer_backorders>
            <catalog>
                <rewrite>
                    <api2_product_rest_admin_v1>Etailer_Backorders_Model_Api2_Product_Rest_Admin_V1</api2_product_rest_admin_v1>
                </rewrite>
            </catalog>
            <cataloginventory>
                <rewrite>
                    <stock_item>Etailer_Backorders_Model_Stock_Item</stock_item>
                </rewrite>
            </cataloginventory>
            <reports_resource>
		        <rewrite>
			        <product_lowstock_collection>Etailer_Backorders_Model_Reports_Resource_Product_Lowstock_Collection</product_lowstock_collection>
		        </rewrite>
	        </reports_resource>
        </models>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Etailer_Backorders before="Mage_Adminhtml">Etailer_Backorders_Catalog_ProductController</Etailer_Backorders>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <etailer_backorders_columns_on_product_grid>
                        <class>etailer_backorders/observer_adminhtml</class>
                        <method>addColumnsToGrid</method>
                    </etailer_backorders_columns_on_product_grid>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <catalog_product_collection_load_before>
                <observers>
                    <etailer_backorders_catalog_product>
                        <class>etailer_backorders/observer_adminhtml</class>
                        <method>joinFieldsToCollection</method>
                    </etailer_backorders_catalog_product>
                </observers>
            </catalog_product_collection_load_before>
        </events>
    </adminhtml>
    <frontend>
        <events>
            <catalog_product_is_salable_after>
                <observers>
                    <etailer_backorders>
                        <type>singleton</type>
                        <class>etailer_backorders/observer</class>
                        <method>catalogProductIsSalableAfter</method>
                    </etailer_backorders>
                </observers>
            </catalog_product_is_salable_after>
        </events>
    </frontend>
</config>
